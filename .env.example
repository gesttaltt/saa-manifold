# Database Configuration
DATABASE_URL=postgresql://saa_user:saa_password@localhost:5432/saa_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=saa_db
DATABASE_USER=saa_user
DATABASE_PASSWORD=saa_password

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_WORKERS=4
API_RELOAD=true

# Data Source Paths
AE9_AP9_DATA_PATH=/data/ae9_ap9
IGRF13_DATA_PATH=/data/igrf13
UNILIB_DATA_PATH=/data/unilib
SAMPLE_DATA_PATH=/data/samples

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/saa-platform.log

# Performance Configuration
MAX_ANALYSIS_POINTS=100000
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_ANALYSES=5
REQUEST_TIMEOUT_SECONDS=300

# GPU Acceleration Configuration
GPU_ENABLED=true
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
ENABLE_MIXED_PRECISION=true
GPU_COMPUTE_STREAMS=4

# AI/ML Configuration
AI_MODELS_PATH=/app/models
AI_ENABLED=true
NLP_MODEL=distilbert-base-uncased
PATTERN_RECOGNITION_MODEL=custom_saa_detector
PREDICTION_MODEL=lstm_ensemble
AI_CACHE_SIZE=1000
ENABLE_CONVERSATION_MEMORY=true

# Real-time Streaming Configuration
STREAMING_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
STREAM_BUFFER_SIZE=10000
MAX_STREAM_CONNECTIONS=100
ENABLE_REAL_TIME_ANALYSIS=true

# Collaboration Features
COLLABORATION_ENABLED=true
MAX_CONCURRENT_SESSIONS=20
WEBSOCKET_MAX_CONNECTIONS=100
ENABLE_SHARED_ANALYSIS=true
COLLABORATION_SESSION_TIMEOUT=3600

# Advanced Visualization
WEBGL_VERSION=2
ENABLE_WEBGPU=false
MAX_VISUALIZATION_VERTICES=100000
ADAPTIVE_LOD_ENABLED=true
PERCEPTUAL_COLOR_SPACE=LAB

# Scientific Data Configuration
DEFAULT_COORDINATE_SYSTEM=geographic
DEFAULT_DATA_SOURCE=ae9_ap9
DEFAULT_FLUX_UNITS=particles_per_cm2_per_second
INTERPOLATION_METHOD=rbf

# Visualization Configuration
DEFAULT_COLOR_SCHEME=plasma
DEFAULT_MESH_RESOLUTION=medium
MAX_VISUALIZATION_VERTICES=50000
ENABLE_3D_ACCELERATION=true

# Development Configuration
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=true
RELOAD_ON_CHANGE=true
ENABLE_HOT_RELOAD=true

# Email Configuration (for notifications)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@saa-platform.com

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=["nc", "h5", "csv", "json"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# External Services
NASA_API_KEY=your-nasa-api-key
NOAA_API_KEY=your-noaa-api-key
ESA_API_KEY=your-esa-api-key

# Production Overrides (uncomment for production)
# API_DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_PROFILING=false
# ENABLE_DEBUG_TOOLBAR=false
# RELOAD_ON_CHANGE=false